    <!--            android:id="@+id/news_page"-->
    <!--            android:name="rooit.me.xo.ui.news.PageNews"-->
    <!--            android:label="@string/title_news"-->
    <!--            tools:layout="@layout/fragment_news" />-->
    <!--    </navigation>-->
    <include app:graph="@navigation/navi_news" />

</navigation>